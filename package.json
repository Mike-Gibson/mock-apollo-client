  "devDependencies": {
    "@apollo/client": "^3.6.9",
    "@types/jest": "^28.1.6",
    "@types/node": "^16.11.46",
    "graphql": "^15.3.0",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
